<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/titreAccueil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bonjour, veuillez saisir votre nom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.15"
        tools:ignore="InvalidId" />

    <ImageView
        android:id="@+id/logoAccueil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.01"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01"
        tools:ignore="InvalidId"
        />
<!--        android:layout_width="100dp"-->
<!--        android:layout_height="100dp"-->
<!--        app:srcCompat="@mipmap/ic_launcher"-->
<!--        tools:ignore="MissingConstraints"-->
<!--        tools:layout_editor_absoluteX="21dp"-->
<!--        tools:layout_editor_absoluteY="20dp"-->
/>

    <EditText
        android:id="@+id/saisieNom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Entrez votre nom ici..."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.35"
        tools:ignore="InvalidId"
        />
<!--        android:layout_width="209dp"-->
<!--        android:layout_height="44dp"-->
<!--        android:hint="Entrez votre nom ici..."-->
<!--        tools:ignore="DuplicateIds,MissingConstraints"-->
<!--        tools:layout_editor_absoluteX="99dp"-->
<!--        tools:layout_editor_absoluteY="187dp"-->
        />

    <Button
        android:id="@+id/boutonAccueil"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="On y va"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5"
        tools:ignore="InvalidId,MissingConstraints"/>
